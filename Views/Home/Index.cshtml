<div class="text-center">
    <h1 class="display-4">Bienvenido a Morro+</h1>
    <img src="/img/logo.png">
    <p>El mejor lugar para ver las mejores series</p>
    <div class="row">
    @{
        foreach (Serie serie in ViewBag.ListaSeries)
        {
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <img src="@serie.ImagenSerie" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@serie.Nombre</h5>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal" onclick="VerInfoSerie(@serie.IdSerie)">
                            Ver mas
                        </button>
                        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modal" onclick="VerActores(@serie.IdSerie)">
                            Elenco
                        </button>
                        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#modal" onclick="VerTemporadas(@serie.IdSerie)">
                            Temporadas
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    </div>
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="NombreSerie" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Titulo">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img id="Imagen">
                    <div id="Numero"></div>
                    <div id="Texto"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
